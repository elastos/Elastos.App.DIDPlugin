<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/appColor">

    <ImageView
        android:id="@+id/title_iv_left"
        android:layout_width="46dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:paddingBottom="13dp"
        android:paddingLeft="13dp"
        android:paddingRight="20dp"
        android:paddingTop="13dp"
        android:src="@drawable/nav_back"
        android:visibility="visible"
        android:onClick="onLeftNavClick"
        tools:src="@drawable/nav_back"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/title_tv_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@id/title_iv_left"
        android:gravity="center_vertical"
        android:hint="返回"
        android:textSize="16sp"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/title_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:maxWidth="300dp"
        android:text="@string/library_name"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/title_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="@string/import_wallet"
        android:hint="设置"
        android:visibility="gone"
        android:onClick="onRightTextClick"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/title_iv_right"
        android:layout_width="30dp"
        android:layout_height="44dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_gravity="center_vertical"
        android:layout_toStartOf="@id/title_tv_right"
        android:paddingBottom="12dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp"
        android:visibility="gone"
        tools:visibility="visible" />

    <View
        android:id="@+id/title_view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        tools:visibility="visible" />
</RelativeLayout>
